{
  "name": "@esral/chapa-nestjs",
  "version": "1.3.2",
  "description": "Chapa SDK for NestJS",
  "author": "Fireayehu Zekarias<fireayehuzekarias@gmail.com>",
  "license": "MIT",
  "url": "https://github.com/fireayehu/chapa-nestjs#readme",
  "main": "dist/chapa-sdk/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/chapa-client/main.js\"",
    "build": "tsc",
    "prepare": "npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fireayehu/chapa-nestjs"
  },
  "keywords": [
    "nestjs",
    "chapa",
    "chapa-nestjs",
    "payment"
  ],
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "nanoid": "^5.1.5",
    "nanoid-dictionary": "^5.0.0",
    "yup": "^1.7.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/testing": "^11.1.6",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsc-watch": "^7.1.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
